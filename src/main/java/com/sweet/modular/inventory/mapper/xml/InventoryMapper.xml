<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.sweet.modular.inventory.mapper.InventoryMapper">    <!-- 通用查询映射结果 -->    <resultMap id="BaseResultMap" type="com.sweet.modular.inventory.entity.Inventory">        <id column="ID" property="id" />        <result column="PRODUCT_ID" property="productId" />        <result column="COUNT" property="count" />        <result column="DEPT_ID" property="deptId" />    </resultMap>    <!-- 通用查询结果列 -->    <sql id="Base_Column_List">        ID, PRODUCT_ID, COUNT, DEPT_ID    </sql>    <select id="customPageList" resultType="com.sweet.modular.inventory.entity.Inventory"            parameterType="com.sweet.modular.inventory.entity.Inventory">        select        <include refid="Base_Column_List"/>        from business_inventory where 1 = 1       <if test="param.deptId != null and param.deptId != ''">        and DEPT_ID like concat('%',#{param.deptId},'%')       </if>    </select></mapper>