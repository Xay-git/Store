<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.sweet.modular.inventory.mapper.InventoryMapper">    <!-- 通用查询映射结果 -->    <resultMap id="BaseResultMap" type="com.sweet.modular.inventory.entity.Inventory">        <id column="ID" property="id" />        <result column="PRODUCT_ID" property="productId" />        <result column="COUNT" property="count" />        <result column="DEPT_ID" property="deptId" />    </resultMap>    <!-- 通用查询结果列 -->    <sql id="Base_Column_List">        ID, PRODUCT_ID, COUNT, DEPT_ID    </sql>    <select id="customPageList" resultType="java.util.Map"            parameterType="com.sweet.modular.inventory.entity.Inventory">        select        a.PRODUCT_NO,a.CATEGORY_NAME,a.`NAME`,a.AMOUNT,a.MEMBER_AMOUNT,a.UNIT,IFNULL(b.COUNT,0) count        from business_product a left join business_inventory b on a.id = b.PRODUCT_ID where a.PRODUCT_TYPE = 2       <if test="param.deptId != null and param.deptId != ''">        and b.DEPT_ID like concat('%',#{param.deptId},'%')       </if>        <if test="param.productName != null and param.productName != ''">            and a.`NAME` like concat('%',#{param.productName},'%')        </if>        <if test="param.productNo != null and param.productNo != ''">            or a.PRODUCT_NO like concat('%',#{param.productNo},'%')        </if>    </select></mapper>