<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.sweet.modular.product.mapper.ProductMapper">    <!-- 通用查询映射结果 -->    <resultMap id="BaseResultMap" type="com.sweet.modular.product.entity.Product">        <id column="ID" property="id" />        <result column="PRODUCT_NO" property="productNo" />        <result column="CATEGORY_ID" property="categoryId" />        <result column="CATEGORY_NAME" property="categoryName" />        <result column="NAME" property="name" />        <result column="AMOUNT" property="amount" />        <result column="IMAGES" property="images" />        <result column="REMARK" property="remark" />        <result column="CREATE_ID" property="createId" />        <result column="CREATE_TIME" property="createTime" />        <result column="CREATE_NAME" property="createName" />        <result column="PRODUCT_TYPE" property="productType" />        <result column="UNIT" property="unit" />        <result column="MEMBER_AMOUNT" property="memberAmount" />        <result column="PUSH_MONEY" property="pushMoney" />    </resultMap>    <!-- 通用查询结果列 -->    <sql id="Base_Column_List">        ID, PRODUCT_NO,CATEGORY_ID, PUSH_MONEY,CATEGORY_NAME, NAME, AMOUNT, IMAGES, REMARK, CREATE_ID, CREATE_TIME, CREATE_NAME,PRODUCT_TYPE,UNIT,MEMBER_AMOUNT    </sql>    <select id="customPageList" resultType="com.sweet.modular.product.entity.Product"            parameterType="com.sweet.modular.product.entity.Product">        select        <include refid="Base_Column_List"/>        from business_product where 1 = 1       <if test="param.categoryId != null and param.categoryId != ''">        and CATEGORY_ID like concat('%',#{param.categoryId},'%')       </if>       <if test="param.name != null and param.name != ''">        and NAME like concat('%',#{param.name},'%')       </if>        <if test="param.productType != null and param.productType != ''">            and PRODUCT_TYPE like concat('%',#{param.productType},'%')        </if>       order by PRODUCT_NO asc    </select></mapper>